# Скопируй этот файл в .env на сервере
# cp .env.server .env

# Провайдер перевода: none | openrouter | deepl | openai
TRANSLATION_PROVIDER=openrouter

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-flash-1.5

# OpenAI (если TRANSLATION_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# DeepL (если TRANSLATION_PROVIDER=deepl)
DEEPL_API_KEY=
DEEPL_URL=https://api-free.deepl.com/v2/translate

# Planfix webhook для загрузки PDF
PLANFIX_WEBHOOK_URL=https://domyka.planfix.us/webhook/file/5mfc-t9vx-9bac-uqkk

